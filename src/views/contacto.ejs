<%- include('./partials/bhead.ejs') %>
<body>
  <%- include('./partials/bheader.ejs') %>
  <div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 70px - 50px)">
    <div class="row">
      <div class="contact-form mt-5 mb-5">
        <h3>Datos de contacto</h3>
        <div class="ajustes-contacto">
          <p>
            <span class="ajustes-contacto-subt">Venta telefónica:</span>
            0810-234-2188<br /><br />

            <span class="ajustes-contacto-subt">Mail:</span>
            <a href="infotecnophone@correo.com.ar"
              >infotecnophone@correo.com.ar</a
            ><br /><br />

            <span class="ajustes-contacto-subt">Horarios de atención:</span
            >&nbsp;lunes a viernes de 10.00 a 19.00 hs y sábados de 10.00 14.30
            hs.
          </p>
        </div>
        <h3><i class="fa fa-envelope-o"></i> Dejanos un mensaje</h3>

        <form action="/Contactenos/Contactenos" method="post">
          <div class="mt-3 mb-3">
            <input
              class="form-control"
              id="name"
              name="name"
              type="text"
              placeholder="Nombre"
            />
          </div>
          <div class="mt-3 mb-3">
            <input
              class="form-control"
              id="email"
              name="email"
              type="email"
              placeholder="Email"
            />
          </div>
          <div class="mt-3 mb-3">
            <input
              class="form-control"
              id="subject"
              name="subject"
              type="text"
              placeholder="Asunto"
            />
          </div>
          <div class="mt-3 mb-3">
            <textarea
              class="form-control"
              name="message"
              id="message"
              cols="30"
              rows="10"
              placeholder="Mensaje"
            ></textarea>
          </div>
          <div class="text-center">
            <input
              class="btn btn-primary btn-lg"
              type="submit"
              value="Enviar Mensaje"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
  <%- include('./partials/bfooter&scripts.ejs') %>
</body>
