<%- include('../partials/bhead.ejs') %>
<body>
  <%- include('../partials/bheader.ejs') %>

  <form
    class="form-register"
    action="/edit/<%= user.id %>?_method=PUT"
    method="POST"
    id="form-register"
    
    
  >
    <h2 class="form-title-register">Editar usuario</h2>
    <div class="form-container-register">
      <div class="form-group-register">
        <input
          class="form-input-register"
          type="text"
          id="first_name"
          name="first_name"
          value="<%= user.first_name%>"
        />
        <label class="form-label-register" for="first_name">Nombre</label>
        <% if (locals.errors && errors.first_name) { %>
        <span class="form-line-register"><%= errors.first_name.msg %></span>
        <% } %>
      </div>

      <div class="form-group-register">
        <input
          class="form-input-register"
          type="text"
          id="last_name"
          name="last_name"
          value="<%= user.last_name%>"
        />
        <label class="form-label-register" for="last_name">Apellido</label>
        <% if (locals.errors && errors.last_name) { %>
        <span class="form-line-register"><%= errors.last_name.msg %></span>
        <% } %>
      </div>

      <div class="form-group-register">
        <input
          class="form-input-register"
          type="text"
          id="address"
          name="address"
          value="<%= user.address  %>"
        />
        <label class="form-label-register" for="address">Direcci√≥n</label>
        <% if (locals.errors && errors.address) { %>
        <span class="form-line-register"><%= errors.address.msg %></span>
        <% } %>
      </div>

      <input type="file" name="avatar" />
      <% if (locals.errors && errors.avatar) { %>
      <span class="form-select-register"><%= errors.avatar.msg %></span>
      <% } %>
      <input type="submit" class="form-submit-register" value="Editar" />
    </div>
    
  </form>
</body>
<%- include('../partials/bfooter&scripts.ejs') %>

