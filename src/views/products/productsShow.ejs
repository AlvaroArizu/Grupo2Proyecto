<%- include('../partials/bhead.ejs') %>
<body>
  <%- include('../partials/bheader.ejs') %>

  <div class="container" style="min-height: calc(100vh - 70px - 50px);">
    <div class="text-center mt-5 mb-5">
      <h1>NUESTROS PRODUCTOS</h1>
    </div>
    <section id="" class="row align-items-lg-center">
      <% allProducts.forEach(product => { %>
      <div class="col-12 col-md-6 col-lg-3 d-flex mb-5">
        <div class="card" style="width: 18rem">
          <% if (product.image) { %> <% if
          (Array.isArray(product.image)) { %> <%
          product.images.forEach(image => { %>
          <img
            src="/images/products/<%= image.name %>"
            alt="<%= image.name %>"
          />
          <% }) %> 
          <% } else { %>
          <img src="/images/products/<%= product.image %>" alt="" />
          <% } %> 
          <% } else { %>
          <img
            src="https://upload.wikimedia.org/wikipedia/commons/3/39/Peu404vitfr.jpg"
            alt=""
          />
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">
              <%= product.description %>
            </p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
      <% }) %>
    </section>
  </div>

  <%- include('../partials/bfooter&scripts.ejs') %>
</body>
